<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="schedule-console" version="3.0">
	<display-name>web</display-name>
	<welcome-file-list>
		<welcome-file>index.controller</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<filter>
		<filter-name>Filter00TimeConsuming</filter-name>
		<filter-class>com.newtouch.web.filter.Filter00TimeConsuming</filter-class>
	</filter>
	<filter>
		<filter-name>Filter01Authority</filter-name>
		<filter-class>com.newtouch.web.filter.Filter01Authority</filter-class>
	</filter>
	<filter>
		<filter-name>Filter02ThreadLocalContext</filter-name>
		<filter-class>com.newtouch.web.filter.Filter02ThreadLocalContext</filter-class>
	</filter>
	<filter>
		<filter-name>Filter03Exception</filter-name>
		<filter-class>com.newtouch.web.filter.Filter03Exception</filter-class>
	</filter>
	<filter>
		<!-- 阿里数据库连接池监听 -->
		<filter-name>DruidWebStatFilter</filter-name>
		<filter-class>com.alibaba.druid.support.http.WebStatFilter</filter-class>
		<init-param>
			<param-name>exclusions</param-name>
			<param-value>*.js,*.gif,*.jpg,*.png,*.css,*.ico,/druid/*</param-value>
		</init-param>
		<init-param>
			<param-name>profileEnable</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Filter00TimeConsuming</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter00TimeConsuming</filter-name>
		<url-pattern>*.controller</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter00TimeConsuming</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter01Authority</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter02ThreadLocalContext</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter02ThreadLocalContext</filter-name>
		<url-pattern>*.controller</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Filter03Exception</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter03Exception</filter-name>
		<url-pattern>*.controller</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DruidWebStatFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>DruidStatView</servlet-name>
		<servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
		<init-param>
			<!-- 允许清空统计数据 -->
			<param-name>resetEnable</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<!-- 用户名 -->
			<param-name>loginUsername</param-name>
			<param-value>picc</param-value>
		</init-param>
		<init-param>
			<!-- 密码 -->
			<param-name>loginPassword</param-name>
			<param-value>newtouch</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>DruidStatView</servlet-name>
		<url-pattern>/druid/*</url-pattern>
	</servlet-mapping>
</web-app>
